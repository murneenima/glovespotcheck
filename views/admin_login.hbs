    <script>
        var attempt = 3; // Variable to count number of attempts.
        // Below function Executes on click of login button.
        function validate() {
          fetch('./user.json')
            .then(function (response) {
              return response.json();
            })
            .then(function (myJson) {
              var username = document.getElementById("username1").value;
              var password = document.getElementById("password1").value;
              if (username == myJson[0].user && password == myJson[0].password) {
                alert("Login successfully");
                Session.set("status", '1');
                // alert(Session.get("name"));
                window.location = "https://glovespotcheck.herokuapp.com/dailyschedule"; // Redirecting to other page.
                return false;
              }
              else {
                attempt--;// Decrementing by one.
                alert("You have left " + attempt + " attempt;");
                // Disabling fields after 3 attempts.
                if (attempt == 0) {
                  document.getElementById("username1").disabled = true;
                  document.getElementById("password1").disabled = true;
                  document.getElementById("submit").disabled = true;
                  return false;
                }
              }
            });
        }
