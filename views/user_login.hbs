<body>
    <!--  navbar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #83D0C9;">
        <h5>Glove Weight Spot Check</h5>

    </nav>

    <!--///////////////////////////////booooooooooooooooooooooooodyyyyyyyyyyyyyyyyyyyyy ///////////// -->
    <div class="container">
        <div class="row my-3  d-flex justify-content-center">
            <h4>Login</h4>
        </div>

        <div class="container">
            <form name="myForm" action="https://glovespotcheck.herokuapp.com/check_login" method="POST" onsubmit="return check_form()">
                <div class="row py-2">
                    <div class="col-4">
                        <label>Badge ID</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="input-font py-4 form-control" name="badgeNo1" id="badgeNO1"
                            placeholder="Badge NO">
                    </div>
                </div>

                <div class="row py-2">
                    <div class="col-4">
                        <label>Password</label>
                    </div>
                    <div class="col-8">
                        <input type="password" class="input-font py-4 form-control" name="password" id="password"
                            placeholder="Password">
                    </div>
                </div>

                <div class="row py-2 ">
                    <button type="submit" id="login" class="btn btn-info center">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>

<script type="text/javascript">
    // check login and password
    function check_form() {
        var x = document.forms["myForm"]["badgeNo1"].value;
        if (x == "") {
            alert("Badge ID must be filled out");
            return false;
        }
    }



</script>

